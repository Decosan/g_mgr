<div class="container">
  <div class="info">
    <h1><%= @score.course.name %>'s Score</h1>
  </div>
  
  <div class="column">
    <div class="demo-title">
    </div>
    <!-- Post-->
    <div class="post-module">
      <!-- Thumbnail-->
      <div class="thumbnail">
        <div class="date">
          <div class="day">
            <%= @score.play_day.day %>
          </div>
          <div class="month">
            <%= @score.play_day.strftime("%B") %>
          </div>
        </div>
        <div>
          <% if @score.images.attached? %>
            <% @score.images.each do |image| %>
              <%= image_tag image %> <br>
            <% end %>
          <% else %>
            <h1>No Image</h1>  
          <% end %>
        </div>  
      </div>
      <!-- Post Content-->
      <div class="post-content">
        <div class="category">Category...
        </div>
        <h1 class="title">SCORE: <%= @score.out_score %> (OUT) + <%= @score.in_score %> (IN) = <%= @score.total_score %> (TOTAL)
        </h1>
        <h2 class="sub_title">PUT: <%= @score.out_put %> (OUT) + <%= @score.in_put %> (IN) = <%= @score.total_put %> (TOTAL)
        </h2>
        
        <div class="post-meta"><span class="timestamp"><i class="fa fa-clock-">o</i> 6 mins ago
</span><span class="comments"><i class="fa fa-comments"></i><a href="#">39 comments</a></span>
        </div>
      </div>
    </div>
  </div>
  
</div>