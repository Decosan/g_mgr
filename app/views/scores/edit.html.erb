<div class = 'container'>
  <% render 'layouts/flash_messages' %>
  <%= form_with(model:@score, local: true)do |f| %>
    <% render 'layouts/error_messages', model: f.object %>

    <div class="number_field">
      <%= f.label :course_id, "コース選択:" %>
      <%= select_tag 'score[course_id]', options_from_collection_for_select(@courses, :id, :name) %>
    </div>  

    <div class="number_field">
      <%= f.label :play_day, '日付:' %>
      <%= f.date_select(
          :play_day,
          start_year: Time.now.year,
          end_year: (Time.now.year),
          order: [:year, :month, :day]) %>
    </div>

    <div class='number_field'>
      <%= f.label :out_score, 'Score(OUT):' %>
      <%= f.number_field :out_score %>
    </div>

    <div class='number_field'>
      <%= f.label :in_score, 'Score(IN):' %>
      <%= f.number_field :in_score %>
    </div>

    <div class='number_field'>
      <%= f.label :total_score, 'Score(TOTAL):' %>
      <%= f.number_field :total_score %>
    </div>

    <div class='number_field'>
      <%= f.label :out_put, 'Put(OUT):' %>
      <%= f.number_field :out_put %>
    </div>

    <div class='number_field'>
      <%= f.label :in_put, 'Put(IN):' %>
      <%= f.number_field :in_put %>
    </div>

    <div class='number_field'>
      <%= f.label :total_put, 'Put(TOTAL):' %>
      <%= f.number_field :total_put %>
    </div>

    <div class="number_field">
      <%= f.label :tag_list %>
      <%= f.text_field :tag_list, value: @score.tag_list.join(',') %>
    </div>

    <br>
    <%= f.file_field :images, multiple: true %>
    <br>
 

    <%= f.submit 'Edit SCORE!' %>
  <% end %>
</div>  