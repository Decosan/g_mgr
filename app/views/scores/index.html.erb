<div class="container">
  <div class="info">
    <h1>Article News Card</h1>
  </div>
  
  <div class="column">
    <div class="demo-title">
    </div>
    <!-- Post-->
    <ul class="post-module">
      <% @scores.each do |score| %>
        <!-- Thumbnail-->
        <li>
          <div class="panel panel-default">
            <div class='panel-heading'>
              <div class="thumbnail">
                <div class="date">
                  <div class="day"><%= score.play_day.day %>
                  </div>
                  <div class="month"><%= score.play_day.strftime("%B") %>
                  </div>
                </div>
                <div>
                  <% if score.images.attached? %>
                    <% score.images.each do |image| %>
                      <%= image_tag image.variant(resize:'300x300').processed %> <br>
                    <% end %>
                  <% else %>
                    <h1>No Image</h1>  
                  <% end %>
                </div>  
              </div>
            </div>

            <div class='panel-body'>
              <div class="post-content">
                <div class="category">Category...
                </div>
                <h1 class="title">SCORE: <%= score.out_score %> (OUT) + <%= score.in_score %> (IN) = <%= score.total_score %> (TOTAL)
                </h1>
                <h2 class="sub_title">PUT: <%= score.out_put %> (OUT) + <%= score.in_put %> (IN) = <%= score.total_put %> (TOTAL)
                </h2>
                
                <div class="post-meta"><span class="timestamp"><i class="fa fa-clock-">o</i> 6 mins ago</span><span class="comments"><i class="fa fa-comments"></i><a href="#">39 comments</a></span>
                </div>
              </div>
            </div>  
          </div>  
        </li>  
      <% end %>  
    </ul>
  </div>
  
</div>