<div class="container">
  <div class="info">
    <h1>Article News Card</h1>
  </div>
  
  <div class="column">
    <div class="demo-title">
    </div>
    <!-- Post-->
    <ul class="post-module">
      <% @scores.each do |score| %>
        <!-- Thumbnail-->
        <li>
          <div class="thumbnail">
            <div class="date">
              <div class="day"><%= score.play_day.day %>
              </div>
              <div class="month"><%= score.play_day.strftime("%B") %>
              </div>
            </div>
            <div>
              <% if score.images.attached? %>
                <% score.images.each do |image| %>
                  <%= image_tag image.variant(resize:'300x300').processed %> <br>
                <% end %>
              <% else %>
                <h1>No Image</h1>  
              <% end %>
            </div>  
          </div>
          <!-- Post Content-->
          <div class="post-content">
            <div class="category">Photos
            </div>
            <h1 class="title">City Lights in New York
            </h1>
            <h2 class="sub_title">The city that never sleeps.
            </h2>
            <p class="description">New York, the largest city in the U.S., is an architectural marvel with plenty of historic monuments, magnificent buildings and countless dazzling skyscrapers.
            </p>
            <div class="post-meta"><span class="timestamp"><i class="fa fa-clock-">o</i> 6 mins ago</span><span class="comments"><i class="fa fa-comments"></i><a href="#">39 comments</a></span>
            </div>
          </div>
        </li>  
      <% end %>  
    </ul>
  </div>
  
</div>